{% extends "base.html.twig" %}

{% block body %}
	<h1>{{ event.name }}</h1>

	<hr>

	<section>
		<div>
			<p>Name</p>
			<p>{{ event.name }}</p>
		</div>

		<div>
			<p>Date</p>
			<p>{{ event.date|date("d/m/Y") }}</p>
		</div>
	</section>

	<hr>

	<section>
		{% if participants is empty %}
			<h2>No participants.</h2>
		{% else %}
			<h2>{{ participants|length }} Participants</h2>
			<table>
				<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
				</tr>
				</thead>
				<tbody>
				{% for participant in participants %}
					<tr>
						<td>{{ participant.name }}</td>
						<td>{{ participant.email }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		{% endif %}

	</section>

	<hr>

	<h2><a href="{{ path('participants.add', {id: event.id}) }}">Add a participant</a></h2>
{% endblock %}